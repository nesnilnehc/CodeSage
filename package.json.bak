{
  "name": "windsurf-code-review",
  "displayName": "Windsurf Code Review",
  "description": "A Windsurf extension for Git commit code review",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.63.0",
    "windsurf": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:windsurf-code-review.startReview",
    "onCommand:windsurf-code-review.debugGit",
    "onView:commitExplorer",
    "onView:fileExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Windsurf Code Review",
      "properties": {
        "windsurf-code-review.codeiumApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "API key for Codeium code review service. Not required in Windsurf editor."
        }
      }
    },
    "commands": [
      {
        "command": "windsurf-code-review.startReview",
        "title": "Start Code Review"
      },
      {
        "command": "windsurf-code-review.debugGit",
        "title": "Debug Git Functionality"
      },
      {
        "command": "windsurf-code-review.refreshCommits",
        "title": "Refresh Commits",
        "icon": "$(refresh)"
      },
      {
        "command": "windsurf-code-review.refreshFiles",
        "title": "Refresh Files",
        "icon": "$(refresh)"
      },
      {
        "command": "windsurf-code-review.filterByDateRange",
        "title": "Filter by Date Range"
      },
      {
        "command": "windsurf-code-review.filterByCommitId",
        "title": "Filter by Commit ID"
      },
      {
        "command": "windsurf-code-review.filterByBranch",
        "title": "Filter by Branch"
      },
      {
        "command": "windsurf-code-review.generateReport",
        "title": "Generate Code Review Report",
        "icon": "$(notebook-render-output)"
      },
      {
        "command": "windsurf-code-review.reviewCode",
        "title": "Review Code Changes"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-review-explorer",
          "title": "Code Review",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "code-review-explorer": [
        {
          "id": "commitExplorer",
          "name": "Commits"
        },
        {
          "id": "fileExplorer",
          "name": "Changed Files"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "windsurf-code-review.refreshCommits",
          "when": "view == commitExplorer",
          "group": "navigation"
        },
        {
          "command": "windsurf-code-review.refreshFiles",
          "when": "view == fileExplorer",
          "group": "navigation"
        },
        {
          "command": "windsurf-code-review.generateReport",
          "when": "view == commitExplorer",
          "group": "navigation@1"
        },
        {
          "command": "windsurf-code-review.filterByDateRange",
          "when": "view == commitExplorer",
          "group": "1_filtering"
        },
        {
          "command": "windsurf-code-review.filterByCommitId",
          "when": "view == commitExplorer",
          "group": "1_filtering"
        },
        {
          "command": "windsurf-code-review.filterByBranch",
          "when": "view == commitExplorer",
          "group": "1_filtering"
        }
      ],
      "view/item/context": []
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "package-extension": "npx vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^8.18.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^1.8.1",
    "simple-git": "^3.16.0"
  }
}
